conky.config = {
	background = true,
	no_buffers = true,
	out_to_x = false,
	out_to_console = false,
	short_units = true,
	update_interval = 1.0,
	overwrite_file = "/tmp/conkytext.tmp",
}

conky.text = [[\
uptime:${uptime_short}  \
proc:${processes}    \
cpu:${cpu}%  \
mem:${memperc}%  \
swap:${swapperc}%    \
fs:${fs_used_perc /}%  \
io:${diskio}    \
addr:${addrs wlan0}  \
up:${upspeed wlan0}  \
down:${downspeed wlan0}\
]]
